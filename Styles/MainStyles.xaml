<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
  <system:Double x:Key="MainElementHeight">35</system:Double>

  <Style x:Key="MainBottomButton" TargetType="{x:Type Button}">
    <Setter Property="Foreground" Value="{StaticResource ColorGray}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="FontSize" Value="{StaticResource FontSmall}"/>
  </Style>
</ResourceDictionary>